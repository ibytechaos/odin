# Odin Framework Configuration Example
# Copy this file to .env and fill in your values

# ============================================
# General Settings
# ============================================
ODIN_ENV=development
ODIN_DEBUG=true
ODIN_LOG_LEVEL=INFO

# ============================================
# LLM Provider Settings
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ============================================
# Tracing & Monitoring
# ============================================
# OpenTelemetry
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=odin

# ============================================
# Storage Backend
# ============================================
# Redis
REDIS_URL=redis://localhost:6379/0

# SQLite
SQLITE_PATH=./data/odin.db

# PostgreSQL (optional)
# POSTGRES_URL=postgresql://user:pass@localhost:5432/odin

# ============================================
# Protocol Settings
# ============================================
# HTTP Server
HTTP_HOST=0.0.0.0
HTTP_PORT=8000

# MCP Server
MCP_ENABLED=true
MCP_PORT=8001

# A2A Settings
A2A_ENABLED=false
A2A_PORT=8002

# ============================================
# Plugin Settings
# ============================================
PLUGIN_AUTO_DISCOVERY=true
PLUGIN_DIRS=./plugins

# ============================================
# Security
# ============================================
API_KEY=your-secret-api-key
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Performance
# ============================================
# Token limit and cost tracking
TOKEN_LIMIT_PER_REQUEST=100000
ENABLE_SEMANTIC_CACHE=true

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
